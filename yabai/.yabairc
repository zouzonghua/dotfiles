#!/usr/bin/env sh

################################################################################
# sudo yabai --uninstall-sa                                                    #
# sudo yabai --install-sa                                                      #
# sudo yabai --load-sa                                                         #
# necessary to load scripting-addition during startup on macOS Big Sur         #
# *yabai --load-sa* is configured to run through sudo without a password       #
# https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)  #
# macos-big-sur---automatically-load-scripting-addition-on-startup             #
################################################################################

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

################################################################################
# global settings
################################################################################
yabai -m config external_bar                 off:45:0
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               on
yabai -m config window_shadow                on
yabai -m config window_opacity               off
yabai -m config window_opacity_duration      0.0
yabai -m config active_window_opacity        0.99
yabai -m config normal_window_opacity        0.99
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 on
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

################################################################################
# border                                                                       #
################################################################################
yabai -m config window_border                   off
yabai -m config window_border_width             5
yabai -m config active_window_border_color      0xff8787af
yabai -m config normal_window_border_color      0xff555555
yabai -m config insert_feedback_color           0xffd75f5f

################################################################################
# general space settings                                                       #
################################################################################
yabai -m config layout                       bsp
yabai -m config top_padding                  04
yabai -m config bottom_padding               04
yabai -m config left_padding                 04
yabai -m config right_padding                04
yabai -m config window_gap                   04

################################################################################
# mission-control desktop labels                                               #
################################################################################
yabai -m space 1 --label code
yabai -m space 2 --label web
yabai -m space 3 --label other

################################################################################
# specific space settings                                                      #
################################################################################
# yabai -m config --space media layout       stack
yabai -m config --space other layout        float

################################################################################
# layoutVariable                                                               #
################################################################################

gridCenter=10:10:2:1:6:8
gridFull=1:1:0:0:1:1
gridSpeaicl=10:10:3:2:4:6

spaceCode="(Alacritty|Code)"
spaceWeb="(Google Chrome)"
spaceOther="(Kodi|Tencent Lemon|微信$|QQ|网易云音乐|zoom.us|邮件|日历|访达)"

################################################################################
# window rules                                                                 #
################################################################################
yabai -m rule --add app="${spaceCode}" space=^code
yabai -m rule --add app="${spaceWeb}" space=^web
yabai -m rule --add app="${spaceOther}" grid=${gridCenter} space=^other manage=off
yabai -m rule --add app="^(IINA|系统偏好设置)" grid=${gridSpeaicl} space=^other manage=off
yabai -m rule --add app="^(微信开发者工具$)" grid=${gridFull} space=^other manage=off

echo "yabai configuration loaded.."
